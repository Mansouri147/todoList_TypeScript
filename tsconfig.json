{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "ES2015", "es6", "dom", "dom.iterable"],
    "paths": {
      "~*": ["./*"]
    },
    "strict": true,
    "target": "ES2015"
  },
  "include": ["src/**/*"]
}
